<script>
    function addToInventario(idContenuto){
        let url="{{BASE_URL}}/api/inventario/add";

        axios.post(url,{
            idCreazione:idContenuto
        },{
            headers:{
                "Authorization": "{{idUtente}}.{{tokenAuth}}"
            }
        }).then((result)=>{
            let ris=result.data.Ris;
            console.log(ris);
            if(ris===1){
                Swal.fire({
                    text: "Contenuto aggiunto all'inventario",
                    icon: "success",
                    buttonsStyling: false,
                    confirmButtonText: "Ok",
                    customClass: {
                        confirmButton: "btn fw-bold btn-primary",
                    }
                });
                document.getElementById("btnAdd"+idContenuto).classList.add("invisible");
            }
            else{
                let mess=result.data.Mess;
                Swal.fire({
                    text: mess,
                    icon: "error",
                    buttonsStyling: false,
                    confirmButtonText: "Ok",
                    customClass: {
                        confirmButton: "btn fw-bold btn-primary",
                    }
                });
            }
        }).catch((_)=>{
            Swal.fire({
                text: "Creazione giÃ  presente nell'inventario",
                icon: "error",
                buttonsStyling: false,
                confirmButtonText: "Ok",
                customClass: {
                    confirmButton: "btn fw-bold btn-primary",
                }
            });
            document.getElementById("btnAdd"+idContenuto).classList.add("invisible");
        });
    }
</script>


<script>
    let actualDiv="";
    function CambiaDiv(idDiv)
    {
        if(actualDiv !== "")
        {
            document.getElementById(actualDiv).classList.add("Ceck");
        }

        document.getElementById(idDiv).classList.remove("Ceck");
        actualDiv=idDiv;
    }
</script>


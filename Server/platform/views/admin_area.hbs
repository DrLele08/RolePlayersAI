    <!--begin::Wrapper-->
    <div class="wrapper d-flex flex-column flex-row-fluid" id="kt_wrapper">
        <!--begin::Header-->
        {{> header titolo="Area amministratore" username=Utente.username}}
        <!--end::Header-->
        <!--begin::Content-->
        <div class="content d-flex flex-column flex-column-fluid" id="kt_content">
            <!--begin::Post-->
            <div class="post d-flex flex-column-fluid" id="kt_post">
                <!--begin::Container-->
                <div id="kt_content_container" class="container-xxl">
                    <!--begin::Card-->
                    <div class="card card-flush">
                        <!--begin::Card header-->
                        <div class="card-header mt-6">
                            <!--begin::Card title-->
                            <div class="card-title">
                                <!--begin::Search-->
                                <div class="d-flex align-items-center position-relative my-1 me-5">
                                    <i class="ki-duotone ki-magnifier fs-3 position-absolute ms-5">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                    </i>
                                    <input type="text" data-kt-permissions-table-filter="search" id="textFiltro" class="form-control form-control-solid w-250px ps-13" placeholder="Cerca utenti..."/>
                                </div>
                                <!--end::Search-->
                            </div>
                            <!--end::Card title-->
                        </div>
                        <!--end::Card header-->
                        <!--begin::Card body-->
                        <div class="card-body pt-0">
                            <!--begin::Table-->
                            <table class="table align-middle table-row-dashed fs-6 gy-5 mb-0" id="kt_permissions_table">
                                <thead>
                                <tr class="text-start text-gray-500 fw-bold fs-7 text-uppercase gs-0">
                                    <th class="min-w-125px">Nome utente</th>
                                    <th class="min-w-250px">Ruolo</th>
                                    <th class="min-w-125px">Abbonamento</th>
                                    <th class="text-end min-w-100px">Cambia ruolo</th>
                                </tr>
                                </thead>
                                <tbody class="fw-semibold text-gray-600">
                                {{#each Utenti}}
                                    <tr>
                                        <td>{{this.nome}} {{this.cognome}} (@{{this.username}})</td>
                                        <td>
                                            {{#equal this.ruolo "Amministratore"}}
                                                <a class="badge badge-light-danger fs-7 m-1">Amministratore</a>
                                            {{/equal}}
                                            {{#equal this.ruolo "Moderatore"}}
                                                <a class="badge badge-light-warning fs-7 m-1">Moderatore</a>
                                            {{/equal}}
                                            {{#equal this.ruolo "Utente"}}
                                                <a class="badge badge-light-success fs-7 m-1">Utente</a>
                                            {{/equal}}
                                        </td>
                                        <td>
                                            <a>{{this.tierAbbonamento}}</a>
                                        </td>
                                        <td class="text-end">
                                            <button class="btn btn-icon btn-active-light-primary w-30px h-30px me-3" data-bs-toggle="modal" data-bs-target="#kt_modal_update_permission" onclick="SetRuolo({{this.idUtente}},'{{this.ruolo}}')">
                                                <i class="ki-duotone ki-setting-3 fs-3">
                                                    <span class="path1"></span>
                                                    <span class="path2"></span>
                                                    <span class="path3"></span>
                                                    <span class="path4"></span>
                                                    <span class="path5"></span>
                                                </i>
                                            </button>
                                        </td>
                                    </tr>
                                {{/each}}

<script>

    document.getElementById('textFiltro').addEventListener('input', filtraTabella);

    function filtraTabella() {
        const indiceColonna = 0;
        const valoreFiltro = document.getElementById("textFiltro").value.trim().toLowerCase();
        let tabella = document.getElementById("kt_permissions_table");
        let righe = tabella.getElementsByTagName("tr");

        // Iterare su tutte le righe della tabella
        for (let i = 0; i < righe.length; i++) {
            let celle = righe[i].getElementsByTagName("td");

            // Controllare se la riga ha celle (per saltare l'header della tabella)
            if (celle.length > 0) {
                // Ottenere il testo della cella nella colonna specificata
                let testoCella = (celle[indiceColonna].textContent || celle[indiceColonna].innerText).toLowerCase();

                // Nascondere la riga se il testo della cella non corrisponde al valore del filtro
                if (testoCella.indexOf(valoreFiltro) > -1) {
                    righe[i].style.display = "";
                } else {
                    righe[i].style.display = "none";
                }
            }
        }
    }
</script>

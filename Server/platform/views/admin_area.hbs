                                        <!--begin::Input group-->
                                        <div class="fv-row mb-7 text-center">
                                            <!--begin::Label-->
                                            <label class="fs-6 fw-semibold form-label mb-2">
                                                Ruolo:
                                            </label>
                                            <!--end::Label-->
                                            <!--begin::Radio buttons-->
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="role" id="userRole" value="user">
                                                <label class="form-check-label" for="userRole">Utente</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="role" id="modRole" value="mod">
                                                <label class="form-check-label" for="modRole">Moderatore</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="role" id="adminRole" value="admin">
                                                <label class="form-check-label" for="adminRole">Amministratore</label>
                                            </div>
                                            <!--end::Radio buttons-->
                                        </div>
                                        <!--end::Input group-->
                                        <!--begin::Actions-->
                                        <div class="text-center pt-15">
                                            <button type="reset" class="btn btn-light me-3" data-kt-permissions-modal-action="cancel">Annulla</button>
                                            <button type="submit" class="btn btn-primary" data-kt-permissions-modal-action="submit">
                                                <span class="indicator-label">Conferma</span>
                                                <span class="indicator-progress">Attendere...
                                                <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                                </span>
                                            </button>
                                        </div>
                                        <!--end::Actions-->
                                    </form>
                                    <!--end::Form-->

                                    <!--begin::Radio script-->
                                    <script>
                                        let idUtenteDaCambiare = -1;

                                        function CambioRuolo(){
                                            let nuovoRuolo="Utente";
                                            let checkAdmin=document.getElementById("adminRole");
                                            let checkModeratore=document.getElementById("modRole");

                                            if(checkAdmin.checked){
                                                nuovoRuolo="Amministratore";
                                            }
                                            else if(checkModeratore.checked){
                                                nuovoRuolo="Moderatore";
                                            }

                                            const url="{{BASE_URL}}/api/admin/setRuolo";

                                            let obj={
                                                "idUtente": idUtenteDaCambiare,
                                                "ruolo": nuovoRuolo
                                            };

                                            let headers={
                                                headers:{
                                                    Authorization: "{{idUtente}}.{{tokenAuth}}"
                                                }
                                            }
                                            axios.post(url,obj,headers).then((result)=>{
                                                let ris=result.data.Ris;
                                                if(ris===1){
                                                    Swal.fire({
                                                        text: "Ruolo modificato con successo!",
                                                        icon: "success",
                                                        buttonsStyling: false,
                                                        confirmButtonText: "Ok",
                                                        customClass: {
                                                            confirmButton: "btn btn-primary"
                                                        }
                                                    }).then(()=>{
                                                        window.location.replace("{{BASE_URL}}/admin");
                                                    });
                                                }
                                                else{
                                                    let mess=result.data.Mess;
                                                    Swal.fire({
                                                        text: mess,
                                                        icon: "error",
                                                        buttonsStyling: false,
                                                        confirmButtonText: "Ok, got it!",
                                                        customClass: {
                                                            confirmButton: "btn btn-primary"
                                                        }
                                                    });
                                                }
                                            }).catch((error)=>{
                                                Swal.fire({
                                                    text: error.message,
                                                    icon: "error",
                                                    buttonsStyling: false,
                                                    confirmButtonText: "Ok, got it!",
                                                    customClass: {
                                                        confirmButton: "btn btn-primary"
                                                    }
                                                });
                                            });
                                        }

                                        function SetRuolo(idUtente,nomeRuolo){
                                            idUtenteDaCambiare=idUtente;
                                            let checkAdmin=document.getElementById("adminRole");
                                            let checkModeratore=document.getElementById("modRole");
                                            let checkUtente=document.getElementById("userRole");

                                            if(nomeRuolo === "Amministratore"){
                                                checkAdmin.checked = true;
                                                checkModeratore.checked = false;
                                                checkUtente.checked = false;
                                            }
                                            else if(nomeRuolo === "Moderatore"){
                                                checkAdmin.checked = false;
                                                checkModeratore.checked = true;
                                                checkUtente.checked = false;
                                            }
                                            else{
                                                checkAdmin.checked = false;
                                                checkModeratore.checked = false;
                                                checkUtente.checked = true;
                                            }
                                        }
                                    </script>
                                    <!--end::Radio script-->

                                </div>
                                <!--end::Modal body-->
                            </div>
                            <!--end::Modal content-->
                        </div>
                        <!--end::Modal dialog-->
                    </div>
                    <!--end::Modal - Update permissions-->
                </div>
                <!--end::Modals-->
            </div>
            <!--end::Container-->
        </div>
        <!--end::Post-->
    </div>
    <!--end::Content-->
    <!--begin::Footer-->
    {{> footer}}
